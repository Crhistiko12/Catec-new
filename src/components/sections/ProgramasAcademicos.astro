---
// src/components/sections/ProgramasAcademicos.astro
interface Programa {
  nombre: string;
  descripcion: string;
}

const { programas } = Astro.props as { programas: Programa[] };
---

<!-- Programas Académicos -->
<section id="programas" class="py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <!-- Técnico Superior -->
    <div class="mb-12">
      <h2 class="text-2xl sm:text-3xl font-bold text-center mb-8 text-white">
        <span class="bg-gradient-to-r from-institucional-white to-institucional-blue-light bg-clip-text text-transparent">
          TÉCNICO SUPERIOR
        </span>
      </h2>
      <div class="space-y-4">
        {programas.map((programa) => (
          <div class="group bg-institucional-blue/10 backdrop-blur-lg rounded-xl p-4 sm:p-6 border border-institucional-white/20 hover:border-institucional-red/50 transition-all duration-300">
            <div class="flex items-center mb-2">
              <div class="w-2.5 h-2.5 bg-institucional-red rounded-full mr-3 group-hover:animate-pulse"></div>
              <h3 class="text-base sm:text-lg font-semibold text-white">{programa.nombre}</h3>
            </div>
            <p class="text-gray-300 text-xs sm:text-sm pl-5">{programa.descripcion}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
