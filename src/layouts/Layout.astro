---
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
    <title>CATEC - Instituto Tecnológico</title>
    <meta name="description" content="Instituto Tecnológico CATEC - Donde estudias para trabajar" />
  </head>
  <body class="bg-gradient-to-br from-institucional-blue-dark via-institucional-blue to-institucional-red min-h-screen">
    <slot />
    
    <!-- Efectos de partículas futuristas -->
    <div class="fixed inset-0 -z-10 overflow-hidden">
      <div class="absolute -inset-[10px] opacity-30">
        <div class="absolute top-1/4 left-1/4 w-72 h-72 bg-institucional-red rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse"></div>
        <div class="absolute top-1/3 right-1/4 w-72 h-72 bg-institucional-blue rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse delay-75"></div>
        <div class="absolute bottom-1/4 left-1/2 w-72 h-72 bg-institucional-white rounded-full mix-blend-multiply filter blur-xl opacity-10 animate-pulse delay-150"></div>
      </div>
    </div>
  </body>
</html>